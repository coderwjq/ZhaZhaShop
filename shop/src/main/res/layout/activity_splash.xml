<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.coderwjq.shop.activity.SplashActivity">

    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/icon_coderwjq"
        app:civ_border_color="@android:color/holo_blue_light"
        app:civ_border_width="5dp"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/civ_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="欢迎使用"
        android:visibility="invisible"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="28sp"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:text="author:coderwjq"
        android:textColor="@android:color/holo_purple"
        android:textSize="22sp"/>

</RelativeLayout>
