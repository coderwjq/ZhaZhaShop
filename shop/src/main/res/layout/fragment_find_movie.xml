<?xml version="1.0" encoding="utf-8"?>
<com.coderwjq.shop.view.ProgressLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pl_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.coderwjq.shop.view.SuperSwipeRefreshLayout
        android:id="@+id/ssrl_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nsv_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_movie_type"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:layout_marginTop="@dimen/dp_22"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_movie_nation"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_movie_period"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:background="@color/divider_normal"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_find_movie_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:background="@color/divider_normal"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_14"
                        android:layout_marginTop="@dimen/dp_14"
                        android:text="全球电影奖项"
                        android:textColor="@color/text_primary"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_movie_awards"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_14"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_normal"/>

                <TextView
                    android:id="@+id/tv_all_awards"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_14"
                    android:text="全部电影奖项>"
                    android:textColor="@color/colorAccent"/>
            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </com.coderwjq.shop.view.SuperSwipeRefreshLayout>
</com.coderwjq.shop.view.ProgressLayout>
