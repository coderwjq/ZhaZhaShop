<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/rg_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="#aaf0f0f0"
            android:orientation="horizontal"
            android:paddingBottom="4dp"
            android:paddingTop="4dp">

    <RadioButton
        android:id="@+id/rb_movie"
        style="@style/rb_bottom"
        android:checked="true"
        android:drawableTop="@drawable/home"
        android:text="电影"/>

    <RadioButton
        android:id="@+id/rb_cinema"
        style="@style/rb_bottom"
        android:drawableTop="@drawable/cinema"
        android:text="影院"/>

    <RadioButton
        android:id="@+id/rb_discover"
        style="@style/rb_bottom"
        android:drawableTop="@drawable/discover"
        android:text="发现"/>

    <RadioButton
        android:id="@+id/rb_mine"
        style="@style/rb_bottom"
        android:drawableTop="@drawable/mine"
        android:text="我的"/>

</RadioGroup>
